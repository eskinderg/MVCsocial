<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    


   
</head>
<body ng-app="MyApp">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Social", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    @if(!User.Identity.IsAuthenticated)
                    { 
                        <li>@Html.ActionLink("Login","Login","Account")</li>
                        <li>@Html.ActionLink("Register", "Register", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("MyDashBoard","Index","Dashboard")</li>
                        <li>@Html.ActionLink("MyProfile", "UserProfile", "Profile")</li>
                        @*<li>@Html.ActionLink("Logout " + User.Identity.Name ,"Logout","Account")</li>*@
                    }
                    
                    <li>@Html.ActionLink("Wizard", "Index", "Wizard")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Weather", "Index", "WeatherService")</li>
                    <li>@Html.ActionLink("CYDE", "Index", "CYDE")</li>


                    @if (User.Identity.IsAuthenticated)
                    { 
                        
                            @Html.Partial("_MenuButton")
                        
                    }
                </ul>

                <div>

                    @if (!User.Identity.IsAuthenticated)
                    {
    
                    }
                    else
                    {
                        
                    }

                </div>
                
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Social Media</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")

    @Scripts.Render("~/bundles/app") @* Main Angular App Instance instead of including <script src="~/App/MyApp.js"></script>*@
    @Scripts.Render("~/bundles/menu")

    
    @Scripts.Render("~/bundles/bootstrap")
    
    @*Kendo-----------------------------------------*@

    @Scripts.Render("~/bundles/Kendo")
    @Styles.Render("~/Content/Kendo")

    @*Kendo UI--------------------------------------*@

    @RenderSection("scripts", required: false)

    
    

</body>
</html>
